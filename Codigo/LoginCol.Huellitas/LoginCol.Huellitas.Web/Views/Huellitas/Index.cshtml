@model LoginCol.Huellitas.Web.Models.ListarHuellitasModel
@{
    ViewBag.TagDescripcion = "Encuentra el perro o gato que se convertirá en el mejor amigo los proximos años de tu vida. Huellitas sin hogar cuenta con una busqueda avanzada de mascotas, empieza ya!!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section metatags
{
    <meta name="fragment" content="!" />
}

<div id="divListarHuellitas">
    <section id="first" class="conteFormCaso slide">
        <div class="container clearfix">
            <h2>ENCUENTRA TU HUELLITA</h2>
            <h3>SOLO BUSCA POR LAS CARACTERISTICAS DEL QUE QUISIERAS FUERA TU HUELLITA</h3>
            <form>

                <div class="conte_check grid_2">
                    <div class="tipoMasco">
                        <input class="check" type="radio" name="rbTipo" value="@Convert.ToInt32(LoginCol.Huellitas.Entidades.TipoContenidoEnum.Perro)">
                        <span class="icon-perro"></span>
                    </div>
                    <div class="tipoMasco">
                        <input class="check" type="radio" name="rbTipo" value="@Convert.ToInt32(LoginCol.Huellitas.Entidades.TipoContenidoEnum.Gato)">
                        <span class="icon-gato"></span>
                    </div>
                </div>

                @*<select id="ddlZonaDepartamento" class="grid_2"><option>DEPARTAMENTO</option></select>
                <select id="ddlZonaCiudad" class="grid_2"><option>CIUDAD</option></select>*@

                @Html.DropDownList("ddlGenero", new SelectList(Model.Generos, "OpcionId", "Texto"), "GENERO", new { @class = "grid_2" })

                <select id="ddlEdad" class="grid_2  ">
                    <option>EDAD</option>
                    <option value="1">De 0 a 1</option>
                    <option value="2">De 1 a 3</option>
                    <option value="3">De 3 a 5</option>
                    <option value="4">Más de 5 (Te lo agradecerá)</option>
                </select>

                @*@Html.DropDownList("ddlColor", new SelectList(Model.Colores, "OpcionId", "Texto"), "COLOR", new { @class = "grid_2 " })*@

                @Html.DropDownList("ddlTamano", new SelectList(Model.Tamanos, "OpcionId", "Texto"), "TAMAÑO", new { @class = "grid_2" })
                @Html.DropDownList("ddlFundacion", new SelectList(Model.Fundaciones, "ContenidoId", "Nombre"), "FUNDACION", new { @class = "grid_2" })

                <div class="grid_2">
                    @Html.TextBox("Nombre", string.Empty, new { placeholder = "NOMBRE:"})
                </div>
                    
                


                
                @*<br />
    @{
        var i = 0;
        foreach (var opcion in Model.RecomendadoPara)
        {

            <div class="grid_2 conte_check @(i==Model.RecomendadoPara.Count-1 ? "omega" : string.Empty)">
                <input class="check" type="checkbox" name="recomendadoPara" value="@opcion.OpcionId" />
                <span>@opcion.Texto</span>
            </div>
            i++;
        }
    }<br />*@

                
              
                
                <div class="btn" id="btnBuscar">BUSCAR</div>
            </form>
        </div>
    </section>

     @Html.Partial("_ResultadosBusqueda")
    
</div>
@section scripts{
    @Scripts.Render("~/bundles/backbone_contenido")
    @Scripts.Render("~/bundles/backbone_zonasGeograficas")
    @Scripts.Render("~/bundles/backbone_lhuellitas")
}


