@model LoginCol.Huellitas.Web.Models.Admin.AdopcionModel
<div class="box col-md-12" id="formSeguimientos">
    <div class="box-inner">
        <div data-original-title="" class="box-header well">
            <h2><i class="glyphicon glyphicon-edit"></i> Seguimientos realizados</h2>
            <div class="box-icon">
                <a class="btn btn-minimize btn-round btn-default" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content" id="divSeguimientos">
            
        </div>

    </div>
</div>

<script id="templateSeguimientos" type="text/template">
    <table id="tableListadoContenidos" class="table table-striped table-bordered bootstrap-datatable responsive">
        <thead>
            <tr>
                <th>Id seguimiento</th>
                <th>Fecha</th>
                <th>Observaciones</th>
                <th>Imagen 1</th>
                <th>Imagen 2</th>
            </tr>
        </thead>
        <tbody id="tbodyListadoContenidos">
            <% _.each(obj, function(element, index){ debugger; %>

            <tr>
                <td class="center"><%= element.SeguimientoAdopcionId %></td>
                <td class="center"><%= element.FechaRespuesta %></td>
                <td class="center"><%= element.Observaciones %></td>
                <td class="center">
                <% if(element.Imagen1 == 'True'){
                    %>
                    <a href="/ImagenesSeguimiento/<%=element.SeguimientoAdopcionId%>/1.jpg" target="_blank">Ver</a><%
                } %>
                </td>
                <td class="center">
                    <% if(element.Imagen2 == 'True'){
                    %>
                    <a href="/ImagenesSeguimiento/<%=element.SeguimientoAdopcionId%>/2.jpg" target="_blank">Ver</a><%
                    } %>
                </td>
            </tr>

                <%
            });
            %>

            <%
            
                if(obj.length == 0){
                %>
                    <tr>
                        <td colspan="5" align="center">
                            NO HAY SEGUIMIENTOS PARA ESTA ADOPCIÓN
                        </td>
                    </tr>
                <%
            
                }
            %>
           

        </tbody>
    </table>
</script>
