@model LoginCol.Huellitas.Web.Models.ContenidoModel
<div id="divUsuariosRelacionados">

</div>

<script type="text/template" id="templateUsuariosRelacionados">
    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div data-original-title="" class="box-header well">
                    <h2><i class="glyphicon glyphicon-edit"></i> Usuarios Relacionados</h2>
                    <div class="box-icon">
                        <a class="btn btn-minimize btn-round btn-default" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="form-group">
                        @Html.Label("Filtar")
                        @Html.DropDownList("TipoRelacionUsuario", new SelectList(Model.TiposRelacionUsuario, "TipoRelacionId", "Nombre"), "-", new { @class = "form-control" })
                        <div class="btn btn-success" id="BtnMostrarAgregarTipoContenido">
                            <i class="glyphicon glyphicon-plus"></i>
                            Agregar Relación de usuario
                        </div>
                    </div>
                    <div class="row" align="center">
                        <div class="box col-md-12">
                            <div class="box-inner">
                                <div data-original-title="" class="box-header well">
                                    <h2>Usuarios Relacionados</h2>
                                </div>
                                <div class="box-content" id="divFilasContenidosRelacionados">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
    </div>
</script>

<div id="divAgregarUsuarioRelacionado" class="modal fade" role="dialog">

</div>

<script id="templateAgregarUsuarioRelacionado" type="text/template">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h3>Agregar Usuario</h3>
            </div>
            <div class="modal-body">
                <p>


                    <div class="box-inner">

                        <div class="box-content">

                            <div class="form-group">
                                @Html.Label("Tipo de Relación")
                                @Html.DropDownList("Relacionados_TipoRelacionContenido", new SelectList(Model.TiposRelacionUsuario, "TipoRelacionId", "Nombre"), "-", new { @class = "form-control", name="Relacionados_TipoRelacionContenido" })
                            </div>
                            <div class="form-group" >
                                @Html.Label("Usuarios")
                                @Html.DropDownList("Relacionados_Usuario", new SelectList(Model.Usuarios, "UsuarioId", "NombreCompleto"), "-", new { @class = "form-control", name = "Relacionados_Usuario" })
                            </div>

                            <div class="btn btn-success" id="BtnGuardarContenidoRelacionado">
                                <i class="glyphicon glyphicon-plus"></i>
                                Guardar
                            </div>


                        </div>
                    </div>


                </p>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</script>







<script type="text/template" id="templateTrUsuarioRelacionado">
    <div class="row" id="trContenidoRelacionado_<%= UsuarioContenidoId %>">
        <div class="col-md-1"><h6><%= Usuario.UsuarioId %></h6></div>
        <div class="col-md-4"><h6><%= Usuario.NombreCompleto %></h6></div>
        <div class="col-md-1">
            <div class="btn btn-success" id="EliminarContenidoRelacionado_<%= UsuarioContenidoId %>">
                <i class="glyphicon glyphicon-remove"></i>
                Borrar
            </div>
        </div>
    </div>
</script>


<script src="~/Scripts/models/huellitas.admin.UsuarioRelacionado.js"></script>
<script src="~/Scripts/views/huellitas.admin.UsuariosRelacionadosView.js"></script>