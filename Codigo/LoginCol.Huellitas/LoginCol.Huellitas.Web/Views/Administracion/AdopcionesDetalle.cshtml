@model LoginCol.Huellitas.Web.Models.FormularioAdopcionModel
@{
    ViewBag.Title = "AdopcionesDetalle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="box col-md-12">
    <div class="box-inner">
        <div data-original-title="" class="box-header well">
            <h2><i class="glyphicon glyphicon-edit"></i> Adoptante</h2>
            <div class="box-icon">
                <a class="btn btn-minimize btn-round btn-default" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            <form role="form">
                <div class="form-group">
                    @Html.Label("Formulario Id")
                    @Html.DisplayFor(m => m.FormularioAdopcionId)
                </div>
                <div class="form-group">
                    @Html.Label("Fecha Solicitud")
                    @Html.DisplayFor(m => m.FechaCreacion)
                </div>
                <div class="form-group">
                    @Html.Label("Huellita")
                    @Html.DisplayFor(m => m.Contenido.Nombre)
                </div>
                <div class="form-group">
                    @Html.Label("Nombres")
                    @Html.DisplayFor(m => m.Usuario.NombreCompleto)
                </div>
                <div class="form-group">
                    @Html.Label("Documento")
                    @Html.DisplayFor(m => m.Usuario.NumeroDocumento)
                </div>
                <div class="form-group">
                    @Html.Label("Correo")
                    @Html.DisplayFor(m => m.Usuario.Correo)
                </div>
                <div class="form-group">
                    @Html.Label("Direccion")
                    @Html.DisplayFor(m => m.Usuario.Direccion)
                </div>
                <div class="form-group">
                    @Html.Label("Telefono")
                    @Html.DisplayFor(m => m.Usuario.Telefono)
                </div>
                <div class="form-group">
                    @Html.Label("Celular")
                    @Html.DisplayFor(m => m.Usuario.Celular)
                </div>
                <div class="form-group">
                    @Html.Label("FechaNacimiento")
                    @Html.DisplayFor(m => m.Usuario.FechaNacimiento)
                </div>
            </form>
        </div>

    </div>
    

    <div class="box-inner">
        <div data-original-title="" class="box-header well">
            <h2><i class="glyphicon glyphicon-edit"></i> Respuestas</h2>
            <div class="box-icon">
                <a class="btn btn-minimize btn-round btn-default" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            <form role="form">
                @foreach (var respuesta in Model.Respuestas)
                {
                    <div class="form-group">
                        @Html.Label(respuesta.Pregunta.Valor)
                        @respuesta.Respuesta
                    </div>
                }

               
            </form>
        </div>
    </div>
</div>