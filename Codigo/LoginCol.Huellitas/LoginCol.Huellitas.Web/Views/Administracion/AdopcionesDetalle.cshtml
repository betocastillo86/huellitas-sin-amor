@using LoginCol.Huellitas.Entidades
@model LoginCol.Huellitas.Web.Models.FormularioAdopcionModel
@{
    ViewBag.Title = "Detalle de Formulario de Adopción";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="box col-md-12" id="formAdopcion">
    @Html.Partial("_DatosFormularioAdopcion")

    <div class="box-inner">
        <div data-original-title="" class="box-header well">
            <h2><i class="glyphicon glyphicon-edit"></i> Responder automáticamente</h2>
            <div class="box-icon">
                <a class="btn btn-minimize btn-round btn-default" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            <form role="form">
                <div class="form-group">
                    Para responder esta solicitud de adopción hay que dar clic en alguno de los botones inferiores. Si la contestación tiene información adicional por favor ingresarla aquí:
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.InformacionAdicionalCorreo)
                    @Html.TextAreaFor(m => m.InformacionAdicionalCorreo, new { @class = "form-control" })
                    
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Observaciones)
                    @Html.TextAreaFor(m => m.Observaciones, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <select id="Estado" name="Estado">
                        <option value="@Convert.ToInt32(EstadoFormularioAdopcion.Aprobado)">Aprobado</option>
                        <option value="@Convert.ToInt32(EstadoFormularioAdopcion.Rechazado)">Rechazado</option>
                        <option value="@Convert.ToInt32(EstadoFormularioAdopcion.AdoptadoPreviamente)">Adopción previa</option>
                    </select>
                    <div class="btn btn-danger btnResponder" >Responder</div>
                </div>

            </form>
        </div>
    </div>

</div>
<script src="~/Scripts/models/huellitas.admin.FormularioAdopcion.js"></script>
<script src="~/Scripts/views/huellitas.admin.AdopcionEditarView.js"></script>