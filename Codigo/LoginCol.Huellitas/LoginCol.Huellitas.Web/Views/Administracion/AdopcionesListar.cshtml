@model LoginCol.Huellitas.Web.Models.Admin.ListarAdopcionModel
@{
    ViewBag.Title = "Adopciones concretadas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row" id="divAdopcionesListar">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-user"></i>Adopciones concretadas</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                    <a href="#" class="btn btn-minimize btn-round btn-default">
                        <i class="glyphicon glyphicon-chevron-up"></i>
                    </a>
                    <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </div>
            <div class="box-content">
                <table id="tableListado" class="table table-striped table-bordered bootstrap-datatable responsive">
                    <thead>
                        <tr>
                            <th>Nombre Mascota</th>
                            <th>Nombre Adoptante</th>
                            <th>Fecha Adopción</th>
                            <th>Opción</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Adopciones)
                        {
                            <tr>
                                <td class="center">@item.ContenidoNombre</td>
                                <td class="center">@item.AdoptanteNombreCompleto</td>
                                <td class="center">

                                    @item.FechaAdopcion

                                </td>
                                <td class="center">
                                    <a class="btn btn-info" href="/Admin/AdopcionesDetalle/@item.AdopcionId">
                                        <i class="glyphicon glyphicon-edit icon-white"></i>
                                        Ver
                                    </a>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/span-->
</div>
@section scripts
{
    <script src="~/Scripts/views/huellitas.admin.AdopcionListarView.js"></script>
}


