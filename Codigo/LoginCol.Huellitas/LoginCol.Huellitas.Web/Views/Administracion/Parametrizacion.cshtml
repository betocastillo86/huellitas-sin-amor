@model List<LoginCol.Huellitas.Entidades.Parametrizacion>
@{
    ViewBag.Title = "Parametrizaciones";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row" id="divParametrizacion">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-user"></i>Variables de Parametrización</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                    <a href="#" class="btn btn-minimize btn-round btn-default">
                        <i class="glyphicon glyphicon-chevron-up"></i>
                    </a>
                    <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div>
                    
                    Llave: <input type="text" id="txtNombreLlave"  />
                    Valor: <input type="text" id="txtValorLlave"  />
                    <input type="button" class="crear btn" value="Crear"/>
                    <br />
                    <br />
                </div>
                <table id="tableListado" class="table table-striped table-bordered bootstrap-datatable responsive">
                    <thead>
                        <tr>
                            <th>Llave</th>
                            <th>Valor</th>
                            <th>Opcion</th>
                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.Count; i++)
                        {
                                

                            <tr>
                                <td  class="center">@Html.Label(Model[i].Llave)</td>
                                <td class="center">@Html.TextBoxFor(m => m[i].Valor, new { id = string.Format("value_{0}", Model[i].Llave)})</td>
                                <td class="center">
                                    <div class="btn btn-info" llave="@Model[i].Llave">
                                        <i class="glyphicon glyphicon-edit icon-white"></i>
                                        Editar
                                    </div>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/span-->
</div>

@section scripts
{
    <script src="~/Scripts/models/huellitas.admin.Parametrizacion.js"></script>
    <script src="~/Scripts/views/huellitas.admin.ParametrizacionView.js"></script>
}