    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Charisma, a fully featured, responsive, HTML5, Bootstrap admin template.">
    <meta name="author" content="Muhammad Usman">

    <!-- The styles -->
    @*<link id="bs-css" href="css/bootstrap-cerulean.min.css" rel="stylesheet">*@

    <link id="bs-css" href="@Url.Content("~/Content/Admin/bootstrap-cerulean.css")" rel="stylesheet">



    @Styles.Render("~/bundles/admin")
    @Styles.Render("~/bundles/themes/base/css")
    

    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/backbone")

    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- The fav icon -->
    <link rel="shortcut icon" href="img/favicon.ico">


</head>

<body>
   

    <div class="ch-container">
        <div class="row">

            <div class="row">
                <div class="col-md-12 center login-header">
                    <h2>Administrador Huellitas sin Hogar</h2>
                </div>
                <!--/span-->
            </div><!--/row-->
            <div class="row">
                <div class="well col-md-5 center login-box">
                    @if (string.IsNullOrEmpty(Model.Error))
                    {
                        <div class="alert alert-info">
                        Please login with your Username and Password.
                    </div>
                    }
                    else
                    { 
                        <div class="alert alert-danger">
                            @Model.Error
                        </div>
                    }

                    
                    <form class="form-horizontal"  method="post">
                        <fieldset>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                                @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control" })
                                
                            </div>
                            @Html.ValidationMessageFor(model => model.Usuario)
                            <div class="clearfix"></div><br>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                                @Html.PasswordFor(model => model.Clave, new { @class = "form-control" })
                                
                            </div>
                            @Html.ValidationMessageFor(model => model.Clave)
                            <div class="clearfix"></div>
                            <div class="input-prepend">
                                <label class="remember" for="remember"><input type="checkbox" id="remember"> Remember me</label>
                            </div>
                            <div class="clearfix"></div>
                            <p class="center col-md-5">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </p>
                        </fieldset>
                    </form>
                </div>
                <!--/span-->
            </div><!--/row-->
        </div><!--/fluid-row-->
    </div><!--/.fluid-container-->




    <!-- external javascript -->
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/calendar")
    @Scripts.Render("~/bundles/chosen")
    @Scripts.Render("~/bundles/colorbox")
    @Scripts.Render("~/bundles/jqueryTemplate")


    <script src="~/Scripts/huellitas.general.js"></script>

</body>
</html>
